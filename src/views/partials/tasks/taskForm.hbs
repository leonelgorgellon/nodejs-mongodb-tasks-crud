{{!-- formulario de ingreso --}}

<div class="card card-body p-4 rounded-o bg-dark text-white">

  <h3>Añadir una tarea</h3>

<form action="/tasks/add" method="post">

  <div>
    <label for="title">Escribe un titulo</label>
    <input type="text" name="title" placeholder="Titulo" class="form-control rounded-0 bg-dark text-white"/>

  </div>

  <div>
    <label for="description">Descripción:</label>
    <textarea
      name="description"
      placeholder="Descripcion"
      id="description" class="form-control rounded-0 bg-dark text-white"
    ></textarea>
  </div>

  <button class="btn btn-primary btn-sm mt-2">Guardar</button>

</form>
</div>