{{! listado de tareas, el each es un for para handlebars }}

{{#if tasks}}
  <table class="table table-bordered table-hover table-dark">
    <thead>
      <tr>
        <th>N.</th>
        <th>Titulo</th>
        <th>Descripci√≥n</th>
        <th>Operaciones</th>
      </tr>
    </thead>
    <tbody>
      {{#each tasks}}
        <tr>
          <td>{{@index}}</td>
          <td>{{title}}</td>
          <td>{{description}}</td>
          <td>

            {{#if done}}
              <a href="/tasks/{{_id}}/toggleDone" class="btn btn-dark">No hecho</a>
            {{else}}
              <a
                href="/tasks/{{_id}}/toggleDone"
                class="btn btn-success"
              >Hecho</a>
            {{/if}}

            <a href="tasks/{{_id}}/delete" class="btn btn-danger">Eliminar</a>
            <a href="tasks/{{_id}}/edit" class="btn btn-info">Actualizar</a>
          </td>
        </tr>

      {{/each}}
    </tbody>
  </table>
{{else}}

  <div class="h-100 d-flex align-item justify-content-center">
    <div class="text-center text-white">
      <h1>No hay tareas</h1>
      <img src="../../../icons/empty.svg" class="w-75" alt="logo" />
    </div>
  </div>

{{/if}}